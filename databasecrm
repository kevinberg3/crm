 	def display_info_by_attribute()
 		@contacts.each do |contact\
 		when 
 		 attribute == "id"
 			contact.id
 		when attribute == "first name"
 			contact.first_name
 		when attribute == "last name"
 			contact.last_name
 		when attribute == "email"
 			contact.email
 		when attribute == "notes"
 			contact.notes
 		end



